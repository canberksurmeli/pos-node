{
	"compilerOptions": {
		"lib": ["es2021"],
		"module": "commonjs",
		"target": "es2021",
		"strict": false,
		"removeComments": true,
		"declaration": true,
		"sourceMap": false,
		"outDir": "../dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["../src/**/*"],
	"exclude": ["../dist"]
}
