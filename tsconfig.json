{
	"ts-node": {
		"moduleTypes": {
			"jest.config.ts": "cjs"
		}
	},
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"paths": {
			"@jest/": ["./node_modules/@jest"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**__tests__/*"]
}
